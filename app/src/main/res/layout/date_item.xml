<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#43A047">

        <LinearLayout
            android:id="@+id/date_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Date Text -->
            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/engl"
                android:text="Hijri Date: 1 Muharram 1445"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <!-- Gregorian Date Text -->
            <TextView
                android:id="@+id/gregorian_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/engl"
                android:text="January 1, 2023"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#494949" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_layer"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="4">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#494949" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" android:layout_height="0dp">

                <!-- Fajr Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/fajr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Fajr"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fajr_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5 pm"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Dhuhr Time -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#494949" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/dhuhr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dhuhr"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dhuhr_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1:20 pm"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Asr Time -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#494949" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/asr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Asr"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/asr_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="4 pm"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Magrib Time -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#494949" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/magrib"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Magrib"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/magrib_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="6 pm"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Isha Time -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#494949" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/isha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Isha"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/isha_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="9 PM"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#494949" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
